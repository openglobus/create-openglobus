{
  "name": "create-openglobus",
  "version": "1.0.6",
  "description": "Template for Openglobus",
  "main": "index.js",
  "type": "module",
  "bin": {
    "create-opengloubs": "./dist/index.js"
  },
  "devDependencies": {
    "@types/ejs": "^3.1.2",
    "@types/inquirer": "^9.0.3",
    "@types/node": "^20.0.0",
    "@types/shelljs": "^0.8.12",
    "nodemon": "^2.0.22",
    "shx": "^0.3.4",
    "ts-node": "^10.9.1",
    "typescript": "^5.0.4"
  },
  "scripts": {
    "start": "ts-node --esm src/index.ts",
    "build": "tsc && shx rm -rf dist/templates && shx cp -r src/templates dist",

    "install:reactts": "cd src/templates/react+typescript && npm install",
    "postinstall": "npm run install:reactts"
  },
